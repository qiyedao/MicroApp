{
  "private": true,
  "scripts": {
    "start": "npm-run-all -l -s start:master",
    "start:master": "pnpm --filter=./packages/umi3Base start",
    "start:slave": "pnpm --filter=\"!./packages/umi3Base\" --parallel start",
    "build": "pnpm  --parallel build",
    "prepare": "husky install",
    "postinstall": "pnpm  --parallel postinstall",
    "install": "pnpm install",
    "prettier": "pnpm  --parallel  prettier "
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}